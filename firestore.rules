rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Users Collection ---
    // Public read (for connecting), but only owner can update specific fields (managed by app logic mostly)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated() && isOwner(userId);
      // Delete typically handled by admin functions or careful client logic
      allow delete: if isAuthenticated() && isOwner(userId);
      
      // Blocked users subcollection
      // Allow users to check if THEY are blocked by someone else
      match /blockedUsers/{blockedUserId} {
        allow read: if isAuthenticated() && (isOwner(userId) || request.auth.uid == blockedUserId);
        allow write: if isAuthenticated() && isOwner(userId);
      }
    }

    // --- Journals Collection ---
    // Strictly private. Only the creator can read/write.
    match /journals/{entryId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // --- Posts Collection (The Wall) ---
    // Public read. Owner write.
    // --- Posts Collection (The Wall) ---
    // Public read. Owner write (create/delete). Public update (for likes/comments).
    match /posts/{postId} {
      allow read: if isAuthenticated();
      // Allow create if the userId matches the authenticated user
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow update for likes/comments (authenticated users)
      // Note: Ideally we'd validate only specific fields are changed, but for MVP this is okay
      allow update: if isAuthenticated();
      // Only owner can delete
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow access to comments subcollection
      match /comments/{commentId} {
        allow read, create: if isAuthenticated();
      }
    }

    // --- Comments Collection ---
    // Top-level comments collection for posts
    match /comments/{commentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // --- Reports Collection ---
    // Users can report objectionable content
    match /reports/{reportId} {
      // Only authenticated users can create reports
      allow create: if isAuthenticated() 
                    && request.resource.data.reporterId == request.auth.uid
                    && request.resource.data.status == "pending";
      // Users can read their own reports
      allow read: if isAuthenticated() && resource.data.reporterId == request.auth.uid;
      // Only admins can update/delete (implement admin check in app)
      allow update, delete: if false; // Admin only via Cloud Functions
    }

    // --- Chats & Messages ---
    // Only participants can read/write.
    match /chats/{chatId} {
      // Allow create if authenticated user is in the participants list
      allow create: if isAuthenticated() 
                    && request.auth.uid in request.resource.data.participants;
      // Allow read if authenticated user is in the participants list
      allow read: if isAuthenticated() 
                  && request.auth.uid in resource.data.participants;
      // Allow update if authenticated user is in the participants list
      allow update: if isAuthenticated() 
                    && request.auth.uid in resource.data.participants;

      // Messages subcollection
      match /messages/{messageId} {
        // Helper function to get parent chat
        function getChatData() {
          return get(/databases/$(database)/documents/chats/$(chatId)).data;
        }
        
        // Allow read if user is a participant in the chat
        allow read: if isAuthenticated() 
                    && request.auth.uid in getChatData().participants;
        // Allow create if user is a participant and is the sender
        allow create: if isAuthenticated() 
                      && request.auth.uid in getChatData().participants
                      && request.resource.data.senderId == request.auth.uid;
        // Allow update/delete if user is the sender (for editing/deleting own messages)
        allow update, delete: if isAuthenticated() 
                              && resource.data.senderId == request.auth.uid;
      }
    }
  }
}
